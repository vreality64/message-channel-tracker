{
  "name": "message-channel-tracker",
  "private": true,
  "type": "module",
  "packageManager": "pnpm@10.14.0",
  "scripts": {
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "biome lint --reporter=summary .",
    "lint:fix": "biome lint --fix .",
    "format": "biome format --write .",
    "prepush": "pnpm run lint && pnpm run test",
    "prepare": "husky",
    "docs:serve": "python3 -m http.server 5174 --directory docs --bind 127.0.0.1",
    "docs:open": "open http://localhost:5174/",
    "docs": "pnpm run docs:serve"
  },
  "devDependencies": {
    "happy-dom": "^18.0.1",
    "vitest": "^1.6.0",
    "@biomejs/biome": "^1.8.3",
    "husky": "^9.1.6"
  }
}
