{
  "manifest_version": 3,
  "name": "Message Channel Tracker",
  "version": "1.0.0",
  "description": "Track and pretty-print window, MessageChannel, BroadcastChannel, and Worker messages without breaking behavior.",
  "permissions": ["storage", "tabs"],
  "action": {
    "default_title": "Message Channel Tracker",
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_start",
      "all_frames": true
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["pageHook.js"],
      "matches": ["<all_urls>"]
    }
  ]
}
